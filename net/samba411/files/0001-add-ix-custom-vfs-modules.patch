+static int get_enum(const char *s, const struct enum_list *_enum)
+{
+	int i;
+
+	if (!s || !*s || !_enum) {
+		return (-1);
+	}
+
+	for (i=0; _enum[i].name; i++) {
+		if (strcmp(_enum[i].name,s) == 0)
+			return _enum[i].value;
+	}
+
+	DBG_ERR("get_enum(%s,enum): value is not in enum_list!\n", s);
+	return (-1);
+}
